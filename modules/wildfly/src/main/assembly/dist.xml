<assembly>
    <id>wildfly8</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>

    <files>
        <file>
             <source>${module.xml.basedir}/ogm/couchdb/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/couchdb/main</outputDirectory>
             <filtered>true</filtered>
        </file>
   </files>

    <dependencySets>
        <dependencySet>
             <useProjectArtifact>false</useProjectArtifact>
             <outputDirectory>org/hibernate/ogm/couchdb/${hibernate.ogm.couchdb.module.slot}</outputDirectory>
             <useTransitiveFiltering>false</useTransitiveFiltering>
             <unpack>false</unpack>
             <includes>
                 <include>org.hibernate.ogm.contrib:hibernate-ogm-contrib-couchdb</include>
             </includes>
       </dependencySet>
    </dependencySets>
</assembly>
